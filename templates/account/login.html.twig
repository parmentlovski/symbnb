{% extends 'base.html.twig' %}

{% block title %}Connexion au site
{% endblock %}

{% block body %}

	<div class="container">

		<div class="row">
			<div class="col-md-3">&nbsp;</div>
			<div class="col-md-6">
				<div class="bg-light py-3 px-3">

					<h1>Connectez vous !</h1>

					{% if hasError %}
						<div class="alert alert-danger">Une erreur est survenue, le nom d'utilisateur ou alors le mot de passe de passe est invalide</div>
					{% endif %}
					<form action="{{ path('account_login')}}" method="post">
						<div class="form-groupe">
							<label for="email">Email</label>
							<input type="text" class="form-control" name="_username" id="email" placeholder="Adresse mail ..." value="{{ username }}" required>
						</div>
						<div class="form-groupe">
							<label for="password">Mot de passe</label>
							<input type="password" class="form-control" name="_password" id="password" placeholder="Mot de passe .." required>
						</div>
						<div class="form-groupe">
							<button type="submit" class="btn btn-success">Connexion !</button>
						</div>
					</form>

				</div>
			</div>
		</div>
	</div>
{% endblock %}
